// import MainLayout from "../layouts/MainLayout.astro";
import StickySidebarLayout from "../layouts/StickySidebarLayout.astro";
import LinkButton from "../components/LinkButton.astro";

import "../styles/global.css";
---
<StickySidebarLayout title="Recommendations">
<div slot="photoheader" class="image-header">
    <img class="top" src="/images/stamps-42.png" />
    <img class="topp" src="/images/stamps-30.png" />
  </div>

  <div slot="logo" >
    <h1>MONIKACORE</h1>
  </div>

  <div slot="main">
  </div>

  <div slot="sidebar" class="sidebar">
    <LinkButton text="About Me" link="/about" />
    <LinkButton text="Wrok Protfolio" link="/work" />
    <LinkButton text="Art" link="/art" />
    <LinkButton text="Gallery" link="/gallery" />
    <LinkButton text="Recommendation" link="/recommendation" />
    <LinkButton text="Quotes I like a lot" link="/quotes" />
    <LinkButton text="List of Random Things" link="/list" />
    <LinkButton text="Things to Remember" link="/remember" />
  </div>
</StickySidebarLayout>

<style>
  .image-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  .top {
    width: 200px;
    height: auto;
  }

  .topp {
    width: 100px;
    height: auto;
  }

	h1{
		text-align: center;
		border: 2px solid #4b0034;
		border-radius: 5px;
	}

  a:hover {
    background: rgba(255, 255, 255, 0.2);
    text-decoration: underline;
  }
  */ h3 {
    margin-bottom: 12px;
    margin-top: 20px;
  }

  h3:first-child {
    margin-top: 0;
  }

  .sidebar {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .sidebar LinkButton {
    background-color: transparent;
    border: 1px solid #4b0034;
    border-radius: 5px;
    color: #4b0034;
    padding: 10px 15px;
    font-size: 14px;
    text-align: left;
    cursor: pointer;
    transition: all 0.2s;
  }

  LinkButton {
    margin: 20px;
  }

  .sidebar LinkButton:hover {
    background-color: #4b0034;
    color: #fff;
  }
</style>

</StickySidebarLayout>
