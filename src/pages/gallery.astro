  .image-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  .top {
    width: 200px;
    height: auto;
  }

  .topp {
    width: 100px;
    height: auto;
  }

  h1 {
    margin: 10px;
    text-align: center;
    border: 2px solid #4b0034;
    border-radius: 5px;
  }

  a:hover {
    background: rgba(255, 255, 255, 0.2);
    text-decoration: underline;
  }

  .sidebar {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .sidebar LinkButton {
    background-color: transparent;
    border: 1px solid #4b0034;
    border-radius: 5px;
    color: #4b0034;
    padding: 10px 15px;
    font-size: 14px;
    text-align: left;
    cursor: pointer;
    transition: all 0.2s;
  }

  LinkButton {
    margin: 20px;
  }
</style>
