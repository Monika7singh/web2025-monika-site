---
import StickySidebarLayout from "../layouts/StickySidebarLayout.astro";
import LinkButton from "../components/LinkButton.astro";
import StampBorder from "../components/StampBorder.astro";

import "../styles/global.css";
---

<StickySidebarLayout title="Gallery">
  <div slot="photoheader" class="image-header">
    <img class="top" src="/images/stamps-42.png" />
    <img class="topp" src="/images/stamps-23.png" />
  </div>

  <div slot="logo">
    <h1>MONIKACORE</h1>
  </div>

  <div slot="main">
    <div class="image-days">
      <StampBorder src="/images/stamps-04.png" alt="Stamp 4" size="100%" />
      <StampBorder src="/images/stamps-05.png" alt="Stamp 5" size="100%" />
      <StampBorder src="/images/stamps-06.png" alt="Stamp 6" size="100%" />
      <StampBorder src="/images/stamps-07.png" alt="Stamp 7" size="100%" />
    </div>
    <!-- <StampBorder><img src="/images/stamps-06.png" alt="a house on the top of a mountain">
    </StampBorder> -->

    <!-- <div class="image-days">
      <img src="/images/stamps-04.png" class="masonry-item">
      <img src="/images/stamps-05.png" class="masonry-item">
    </div> -->
  </div>

  <div slot="sidebar" class="sidebar">
    <LinkButton text="Home Page" link="/" />
    <LinkButton text="About Me" link="/about" />
    <LinkButton text="Work Portfolio" link="/work" />
    <LinkButton text="Art" link="/art" />
    <LinkButton text="Gallery" link="/gallery" />
    <LinkButton text="Recommendation" link="/recommendation" />
    <LinkButton text="Quotes I like a lot" link="/quotes" />
    <LinkButton text="List of Random Things" link="/list" />
    <LinkButton text="Things to Remember" link="/remember" />
  </div>
</StickySidebarLayout>

<style>
  .image-days {
  column-count: 3;
  column-gap: 15px;
  padding: 50px;
}

.image-days > * {
  break-inside: avoid;
  margin-bottom: 15px;
}

@media (max-width: 900px) {
  .image-days {
    column-count: 2;
  }
}

@media (max-width: 600px) {
  .image-days {
    column-count: 1;
  }
}

