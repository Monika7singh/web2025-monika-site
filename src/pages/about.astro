---
import StickySidebarLayout from "../layouts/StickySidebarLayout.astro";
import LinkButton from "../components/LinkButton.astro";
import PostCard from "../components/PostCard.astro";

import "../styles/global.css";
---

<StickySidebarLayout title="Sticky Sidebar Layout Example">
  <div slot="photoheader">
    <h1>image</h1>
  </div>
  <div slot="main">
    <PostCard
  content={`Hi, I’m Monika — a designer who lives where minimal meets timeless, and imagination refuses to sit still.`}
  imageSrc="/images/stamps-42.png"
  imageAlt="Decorative box"
    />
  </div>
  <!-- <div slot="sidebar">
    <!- <h3>Navigation</h3> -->
  <!-- <ul> -->
  <LinkButton text="About Me" link="/about" />
  <LinkButton text="Wrok Protfolio" link="/work" />
  <LinkButton text="Art" link="/art" />
  <LinkButton text="Gallery" link="/gallery" />
  <LinkButton text="Recommendation" link="/recommendation" />
  <LinkButton text="List of Random Things" link="/list" />
  <LinkButton text="Things to Remember" link="/remember" />
  <!-- </ul> -->
  <!-- </div> --> --

  <div slot="sidebar" class="sidebar">
    <LinkButton text="About Me" link="/about" />
    <LinkButton text="Wrok Protfolio" link="/work" />
    <LinkButton text="Art" link="/art" />
    <LinkButton text="Gallery" link="/gallery" />
    <LinkButton text="Recommendation" link="/recommendation" />
    <LinkButton text="List of Random Things" link="/list" />
    <LinkButton text="Things to Remember" link="/remember" />
  </div>
</StickySidebarLayout>

<style>
  a:hover {
    background: rgba(255, 255, 255, 0.2);
    text-decoration: underline;
  }
  */ h3 {
    margin-bottom: 12px;
    margin-top: 20px;
  }

  h3:first-child {
    margin-top: 0;
  }

  .sidebar {
    /* flex: 1; */
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .sidebar LinkButton {
    background-color: transparent;
    border: 1px solid #4b0034;
    border-radius: 5px;
    color: #4b0034;
    padding: 10px 15px;
    font-size: 14px;
    text-align: left;
    cursor: pointer;
    transition: all 0.2s;
  }

  LinkButton {
    margin: 20px;
  }

  .sidebar LinkButton:hover {
    background-color: #4b0034;
    color: #fff;
  }
</style>
