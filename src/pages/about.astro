<style>
  a:hover {
    background: rgba(255, 255, 255, 0.2);
    text-decoration: underline;
  }
  */ h3 {
    margin-bottom: 12px;
    margin-top: 20px;
  }

  h3:first-child {
    margin-top: 0;
  }

  .sidebar {
    /* flex: 1; */
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .sidebar LinkButton {
    background-color: transparent;
    border: 1px solid #4b0034;
    border-radius: 5px;
    color: #4b0034;
    padding: 10px 15px;
    font-size: 14px;
    text-align: left;
    cursor: pointer;
